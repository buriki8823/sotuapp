<h1 class="toukou-title text-center mb-5" style="font-size: 100px; margin-top: 60px;">
  パスワードをリセットしますか？
</h1>

<div class="container" style="max-width: 1400px; margin: 0 auto;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-5">
      <%= f.label :password, "新しいパスワード", class: "form-label", style: "font-size: 36px;" %><br />
      <% if @minimum_password_length %>
        <em style="font-size: 18px;">（<%= @minimum_password_length %>文字以上）</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", style: "font-size: 24px; padding: 12px;" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label", style: "font-size: 36px;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "font-size: 24px; padding: 12px;" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "パスワードを変更", class: "btn btn-primary", style: "font-size: 24px; padding: 12px 24px;" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "ログイン画面に戻る", new_user_session_path, class: "text-decoration-none", style: "font-size: 18px; color: #1762A8;" %>
  </div>
</div>