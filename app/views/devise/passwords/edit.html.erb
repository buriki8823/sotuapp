<h1 class="toukou-title text-center mb-5" style="font-size: 100px; margin-top: 60px;">
  パスワードをリセットしますか？
</h1>

<div class="container" style="max-width: 1400px; margin: 0 auto;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-5">
      <%= f.label :password, "新しいパスワード", class: "form-label", style: "font-size: 36px;" %><br />
      <% if @minimum_password_length %>
        <em style="font-size: 18px;">（<%= @minimum_password_length %>文字以上）</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", style: "font-size: 24px; padding: 12px;" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label", style: "font-size: 36px;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "font-size: 24px; padding: 12px;" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "パスワードを変更", class: "btn btn-primary", style: "font-size: 24px; padding: 12px 24px;" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "ログイン画面に戻る", new_user_session_path, class: "text-decoration-none", style: "font-size: 18px; color: #1762A8;" %>
  </div>
</div>

<style>
@media (max-width: 768px) {
  /* タイトル */
  h1.toukou-title {
    font-size: 28px !important;
    margin-top: 20px !important;
    -webkit-text-stroke: 1px #4DE33F;
    text-shadow: 0.5px 0.5px 0 #4DE33F, -0.5px -0.5px 0 #4DE33F;
  }

  /* コンテナ */
  .container {
    max-width: 95% !important;
    padding: 0 12px;
  }

  /* 入力欄 */
  .form-control {
    width: 100% !important;
    font-size: 16px !important;
    padding: 8px !important;
    height: 44px !important;
  }

  /* ラベル */
  .form-label {
    font-size: 18px !important;
    margin-bottom: 4px !important;
  }

  /* パスワード長さの注意書き */
  em {
    font-size: 14px !important;
  }

  /* ボタン */
  .btn-primary {
    font-size: 16px !important;
    padding: 10px 16px !important;
    width: 100% !important;
    max-width: 320px;
  }

  /* 戻るリンク */
  .text-center a {
    font-size: 14px !important;
  }
}
</style>