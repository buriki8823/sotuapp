<div class="container my-3">
  <div class="d-flex justify-content-between align-items-center px-3 shadow-sm rounded-4"
       style="width: 477px; height: 61px; background-color: #f8f9fa;">
    
    <div class="d-flex gap-5 align-items-center" style="position: relative; left: 30px; font-size: 17px;">
       <%= link_to "ホームページ", root_path, class: "text-decoration-none text-dark fw-semibold" %>
         <%= link_to "投稿一覧", posts_path, class: "text-decoration-none text-dark fw-semibold" %>
       <%= link_to "マイページ", mypage_path, class: "text-decoration-none text-dark fw-semibold" %>
    </div>

    <div>
      <%= image_tag "mouse.png", alt: "マウスアイコン", width: 90, height: 90, class: "ms-2" %>
    </div>

  </div>
</div>

<style>
/* スマホ表示用 */
@media (max-width: 768px) {
  /* ナビゲーション全体の枠 */
  .container .d-flex {
    width: 100% !important;   /* 横幅を画面にフィット */
    height: 30px !important; /* 高さを縮小 */
    padding: 0 8px !important;
  }

  /* リンク部分 */
  .container .d-flex .d-flex {
    left: 10px !important;
    gap: 12px !important;     /* リンク間の余白を縮小 */
    font-size: 12px !important; /* フォントサイズを小さく */
  }

  /* アイコン画像 */
  .container img {
    width: 40px !important;
    height: 40px !important;
  }
}
</style>