<nav class="navbar" style="background: linear-gradient(to right, #34C8E2); height: 70px;">
  <div class="container-fluid d-flex justify-content-between align-items-center" style="height: 100%;">
    
    <!-- 左側：ログイン時のみアイコン表示 -->
    <% if user_signed_in? %>
      <div class="d-flex align-items-center gap-3">
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(resize_to_fill: [40, 40]), class: "rounded-circle", alt: "ユーザーアイコン" %>
        <% else %>
          <%= image_tag "default_avatar.png", width: 40, height: 40, class: "rounded-circle", alt: "デフォルトアイコン" %>
        <% end %>

        <i class="bi bi-envelope" style="font-size: 28px; color: #31FF57;"></i>
      </div>
    <% else %>
      <!-- ログアウト時は空のスペースでバランスを保つ -->
      <div style="width: 100px;"></div>
    <% end %>

    <!-- 右側：ロゴは常に表示 -->
    <%= link_to "PCPACK", (user_signed_in? ? root_path : new_user_session_path),
      class: "nav-link fw-bold",
      style: "font-size: 45px; line-height: 50px; color:#31FF57; text-shadow: 1px 1px 0 #8CFE00, -1px -1px 0 #8CFE00;" %>
  </div>
</nav>

