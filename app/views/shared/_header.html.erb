<nav class="navbar" style="background: linear-gradient(to right, #34C8E2); height: 100px; margin-bottom: 0; padding: 0;">
  <div class="container-fluid d-flex justify-content-between align-items-center" style="height: 100%; padding-top: 0; padding-bottom: 0;">
    
    <% if user_signed_in? %>
      <div class="d-flex align-items-center gap-3">
        <% if current_user.avatar.attached? %>
          <%= image_tag url_for(current_user.avatar), width: 60, height: 60, class: "rounded-circle", alt: "ユーザーアイコン" %>
        <% else %>
          <%= image_tag "default_avatar.png", width: 60, height: 60, class: "rounded-circle", alt: "デフォルトアイコン" %>
        <% end %>
        <i class="bi bi-envelope" style="font-size: 40px; color: #31FF57;"></i>
      </div>
    <% else %>
      <div style="width: 100px;"></div>
    <% end %>

    <%= link_to "PCPACK", (user_signed_in? ? root_path : new_user_session_path), class: "nav-link fw-bold logo-text", style: "font-size: 60px;"%>
  </div>
</nav>

